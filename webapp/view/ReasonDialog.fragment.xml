<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="reasonDialog" title="Leave Reason">
        <content>
            <VBox id="_IDGenVBox1">
                <Label id="_IDGenLabel1" text="Reason for Leave" labelFor="leaveReason" />
                <TextArea id="leaveReason" width="100%" placeholder="Enter your reason here" />
            </VBox>
        </content>
        <beginButton>
            <Button id="_IDGenButton1" text="Submit" press="onDialogSubmit" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton2" text="Cancel" press="onDialogCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
